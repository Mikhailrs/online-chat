<div class="container max-w-full mx-auto md:py-24 px-6">
  <div class="max-w-sm mx-auto px-6">
    <div class="relative flex flex-wrap">
      <%= turbo_stream_from :rooms %>
      <%= turbo_frame_tag :rooms do %>
        <%= render @rooms %>
      <% end %>
      <div class="w-full relative">
        <% if user_signed_in? %>
        <div class="md:mt-6">
          <%= form_with model: @room do |f| %>
            <div class="mx-auto max-w-lg ">
              <div class="py-1">
                <%= f.label :title, class: "px-1 text-sm text-gray-600" %><br />
                <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none" %>
              </div>

              <%= f.submit "Create room", class: "mt-3 text-lg font-semibold bg-gray-800 w-full text-white rounded-lg
                    px-6 py-3 block shadow-xl hover:text-white hover:bg-black mt-8" %>
            </div>
          <% end %>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>